<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="Eriocnemis\Cron\Block\Adminhtml\Schedule" name="cron.schedule.grid.container">
                <block class="Magento\Backend\Block\Widget\Grid" name="cron.schedule.grid" as="grid">
                    <arguments>
                        <argument name="id" xsi:type="string">scheduleGrid</argument>
                        <argument name="dataSource" xsi:type="object">Eriocnemis\Cron\Model\ResourceModel\Schedule\Collection</argument>
                        <argument name="default_sort" xsi:type="string">schedule_id</argument>
                        <argument name="default_dir" xsi:type="string">ASC</argument>
                    </arguments>
                    <block class="Eriocnemis\Cron\Block\Adminhtml\Widget\Grid\Massaction" name="cron.schedule.grid.massaction" as="grid.massaction">
                        <arguments>
                            <argument name="massaction_id_field" xsi:type="string">schedule_id</argument>
                            <argument name="form_field_name" xsi:type="string">schedule_ids</argument>
                            <argument name="use_select_all" xsi:type="string">1</argument>
                            <argument name="options" xsi:type="array">
                                <item name="delete" xsi:type="array">
                                    <item name="label" xsi:type="string" translate="true">Delete</item>
                                    <item name="url" xsi:type="string">*/*/massDelete</item>
                                    <item name="params" xsi:type="array">
                                        <item name="_current" xsi:type="string">1</item>
                                    </item>
                                    <item name="confirm" xsi:type="string" translate="true">Are you sure you want to delete the selected schedules?</item>
                                </item>
                            </argument>
                        </arguments>
                    </block>
                    <block class="Magento\Backend\Block\Widget\Grid\Export" name="cron.schedule.grid.export" as="grid.export">
                        <arguments>
                            <argument name="exportTypes" xsi:type="array">
                                <item name="csv" xsi:type="array">
                                    <item name="urlPath" xsi:type="string">*/*/exportCsv</item>
                                    <item name="label" xsi:type="string" translate="true">CSV</item>
                                </item>
                                <item name="excel" xsi:type="array">
                                    <item name="urlPath" xsi:type="string">*/*/exportXml</item>
                                    <item name="label" xsi:type="string" translate="true">Excel XML</item>
                                </item>
                            </argument>
                        </arguments>
                    </block>
                    <block class="Magento\Backend\Block\Widget\Grid\ColumnSet" name="cron.schedule.grid.columnSet" as="grid.columnSet">
                        <block class="Magento\Backend\Block\Widget\Grid\Column" name="schedule_id">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">ID</argument>
                                <argument name="index" xsi:type="string">schedule_id</argument>
                                <argument name="column_css_class" xsi:type="string">col-id</argument>
                                <argument name="header_css_class" xsi:type="string">col-id</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" name="job_code">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">Job Name</argument>
                                <argument name="index" xsi:type="string">job_code</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" name="created_at">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">Created</argument>
                                <argument name="type" xsi:type="string">datetime</argument>
                                <argument name="index" xsi:type="string">created_at</argument>
                                <argument name="column_css_class" xsi:type="string">col-date</argument>
                                <argument name="header_css_class" xsi:type="string">col-date</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" name="scheduled_at">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">Scheduled</argument>
                                <argument name="type" xsi:type="string">datetime</argument>
                                <argument name="index" xsi:type="string">scheduled_at</argument>
                                <argument name="column_css_class" xsi:type="string">col-date</argument>
                                <argument name="header_css_class" xsi:type="string">col-date</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" name="executed_at">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">Executed</argument>
                                <argument name="type" xsi:type="string">datetime</argument>
                                <argument name="index" xsi:type="string">executed_at</argument>
                                <argument name="column_css_class" xsi:type="string">col-date</argument>
                                <argument name="header_css_class" xsi:type="string">col-date</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" name="finished_at">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">Finished</argument>
                                <argument name="type" xsi:type="string">datetime</argument>
                                <argument name="index" xsi:type="string">finished_at</argument>
                                <argument name="column_css_class" xsi:type="string">col-date</argument>
                                <argument name="header_css_class" xsi:type="string">col-date</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" name="schedule.messages" as="messages">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">Message</argument>
                                <argument name="index" xsi:type="string">messages</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" name="status">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">Status</argument>
                                <argument name="type" xsi:type="string">options</argument>
                                <argument name="options" xsi:type="options" model="Eriocnemis\Cron\Model\Config\Source\Status"/>
                                <argument name="index" xsi:type="string">status</argument>
                            </arguments>
                        </block>
                    </block>
                </block>
            </block>
        </referenceContainer>
    </body>
</page>
